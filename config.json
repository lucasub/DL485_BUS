            "n_refresh_off": 1,
            "enable": 0,
            "plc_function": "time_meter",
            "counter_mode": 24, // Aggiorna risultato ogni 10 secondi
            "counter_filter": 0, // non usato
            "counter_timeout": 0, // 5 secondi
            "plc_linked_board_id_io_logic": [
                "1-11"
            ],
            "name": "time_meter",
            "description": "time_meter",
            "dtype": "Switch"
        },
             

        "PD4":
